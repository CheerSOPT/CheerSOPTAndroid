<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity"
    android:background="@color/cheers_sopt_navy">

    <TextView
        android:id="@+id/result_beverage_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="경고합니다 Warning!💀"
        android:textColor="@color/white"
        android:fontFamily="@font/notosans_bold"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="28dp"/>

    <View
        android:id="@+id/result_beverage_bg"
        android:layout_width="330dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_result"
        android:alpha="0.3"
        android:layout_marginTop="92dp"
        android:layout_marginBottom="43dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <EditText
        android:id="@+id/result_beverage_et"
        android:layout_width="288dp"
        android:layout_height="34dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingStart="20dp"
        android:layout_marginTop="108dp"
        android:textColor="@color/white"
        android:background="@drawable/et_area_beverage_naming"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/result_beverage_btn"
        android:layout_width="49dp"
        android:layout_height="26dp"
        app:layout_constraintEnd_toEndOf="@id/result_beverage_et"
        app:layout_constraintTop_toTopOf="@id/result_beverage_et"
        app:layout_constraintBottom_toBottomOf="@id/result_beverage_et"
        android:background="@drawable/btn_beverage_naming"
        android:layout_marginEnd="5dp"
        android:textColor="@color/white"
        android:text="완료"
        android:gravity="center"
        android:visibility="invisible"/>



    <TextView
        android:id="@+id/result_beverage_tv_cnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/result_beverage_tv_cnt2"
        app:layout_constraintTop_toBottomOf="@id/result_beverage_et"
        android:text="0"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:alpha="0.6"
        android:textSize="12dp"
        android:fontFamily="@font/notosans_regular"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/result_beverage_tv_cnt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/result_beverage_et"
        app:layout_constraintTop_toTopOf="@id/result_beverage_tv_cnt"
        app:layout_constraintBottom_toBottomOf="@id/result_beverage_tv_cnt"
        android:layout_marginEnd="10dp"
        android:text="/15"
        android:textColor="@color/white"
        android:alpha="0.6"
        android:textSize="12dp"
        android:fontFamily="@font/notosans_regular"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="142dp"
        android:layout_height="247dp"
        android:src="@drawable/img_glass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/result_beverage_tv"
        android:layout_marginBottom="37dp"/>


    <TextView
        android:id="@+id/result_beverage_stack1"
        android:layout_width="95dp"
        android:layout_height="38dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/result_beverage_tv"
        android:layout_marginBottom="64dp"
        android:background="@drawable/beverage_stack"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/result_beverage_stack2"
        android:layout_width="95dp"
        android:layout_height="38dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/result_beverage_stack1"
        android:layout_marginBottom="5dp"
        android:background="@drawable/beverage_stack"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/result_beverage_stack3"
        android:layout_width="95dp"
        android:layout_height="38dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/result_beverage_stack2"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/cheers_sopt_green"
        android:background="@drawable/beverage_stack"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/result_beverage_stack4"
        android:layout_width="95dp"
        android:layout_height="38dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/result_beverage_stack3"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/cheers_sopt_green"
        android:background="@drawable/beverage_stack"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/result_beverage_stack5"
        android:layout_width="95dp"
        android:layout_height="38dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/result_beverage_stack4"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/cheers_sopt_skyblue"
        android:background="@drawable/beverage_stack"
        android:visibility="invisible"
        />



    <TextView
        android:id="@+id/result_beverage_tv"
        android:layout_width="200dp"
        android:layout_height="34dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/result_beverage_tv_beverage1"
        android:layout_marginBottom="21dp"
        android:text="소주잔 1잔 기준입니다"
        android:paddingStart="48dp"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:fontFamily="@font/notosans_regular"
        android:gravity="fill_vertical"
        android:background="@drawable/et_area_beverage_naming"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_sojuzan"
        android:layout_marginStart="22dp"
        app:layout_constraintStart_toStartOf="@id/result_beverage_tv"
        app:layout_constraintTop_toTopOf="@id/result_beverage_tv"
        app:layout_constraintBottom_toBottomOf="@id/result_beverage_tv"/>

    <TextView
        android:id="@+id/result_beverage_tv_beverage1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="복분자 2잔"
        android:fontFamily="@font/notosans_bold"
        app:layout_constraintBottom_toTopOf="@id/result_beverage_tv_beverage2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/result_beverage_tv_beverage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="소주 2잔"
        android:fontFamily="@font/notosans_bold"
        app:layout_constraintBottom_toTopOf="@id/result_beverage_tv_beverage3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/result_beverage_tv_beverage3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="사이다 1잔"
        android:fontFamily="@font/notosans_bold"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="@id/result_beverage_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>












</androidx.constraintlayout.widget.ConstraintLayout>