<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity"
    android:background="@color/cheers_sopt_navy">

    <TextView
        android:id="@+id/result_beverage_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="환상의 비율로 제조 완료 !"
        android:textColor="@color/white"
        android:fontFamily="@font/notosans_bold"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="28dp"/>

    <View
        android:id="@+id/result_beverage_bg"
        android:layout_width="330dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_result"
        android:alpha="0.3"
        android:layout_marginTop="92dp"
        android:layout_marginBottom="43dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <EditText
        android:id="@+id/result_beverage_et"
        android:layout_width="288dp"
        android:layout_height="34dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="108dp"
        android:background="@drawable/et_area_beverage_naming"/>

    <TextView
        android:layout_width="49dp"
        android:layout_height="26dp"
        app:layout_constraintEnd_toEndOf="@id/result_beverage_et"
        app:layout_constraintTop_toTopOf="@id/result_beverage_et"
        app:layout_constraintBottom_toBottomOf="@id/result_beverage_et"
        android:background="@drawable/btn_beverage_naming"
        android:layout_marginEnd="5dp"
        android:textColor="@color/white"
        android:text="완료"
        android:gravity="center"/>



    <TextView
        android:id="@+id/result_beverage_tv_cnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/result_beverage_tv_cnt2"
        app:layout_constraintTop_toBottomOf="@id/result_beverage_et"
        android:text="0"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:alpha="0.6"
        android:textSize="12dp"
        android:fontFamily="@font/notosans_regular"/>

    <TextView
        android:id="@+id/result_beverage_tv_cnt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/result_beverage_et"
        app:layout_constraintTop_toTopOf="@id/result_beverage_tv_cnt"
        app:layout_constraintBottom_toBottomOf="@id/result_beverage_tv_cnt"
        android:layout_marginEnd="10dp"
        android:text="/15"
        android:textColor="@color/white"
        android:alpha="0.6"
        android:textSize="12dp"
        android:fontFamily="@font/notosans_regular"/>

    <ImageView
        android:layout_width="142dp"
        android:layout_height="247dp"
        android:src="@drawable/img_glass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="273dp"/>


    <TextView
        android:id="@+id/result_beverage_stack1"
        android:layout_width="95dp"
        android:layout_height="38dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="300dp"
        android:background="@drawable/beverage_stack"
        />
    <TextView
        android:id="@+id/result_beverage_stack2"
        android:layout_width="95dp"
        android:layout_height="38dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/result_beverage_stack1"
        android:layout_marginBottom="5dp"
        android:background="@drawable/beverage_stack"
        />

    <TextView
        android:id="@+id/result_beverage_stack3"
        android:layout_width="95dp"
        android:layout_height="38dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/result_beverage_stack2"
        android:layout_marginBottom="5dp"
        android:background="@drawable/beverage_stack"
        />

    <TextView
        android:id="@+id/result_beverage_stack4"
        android:layout_width="95dp"
        android:layout_height="38dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/result_beverage_stack3"
        android:layout_marginBottom="5dp"
        android:background="@drawable/beverage_stack"
        />

    <TextView
        android:id="@+id/result_beverage_stack5"
        android:layout_width="95dp"
        android:layout_height="38dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/result_beverage_stack4"
        android:layout_marginBottom="5dp"
        android:background="@drawable/beverage_stack"
        />



    <TextView
        android:id="@+id/result_beverage_tv"
        android:layout_width="200dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/result_beverage_bg"
        android:layout_marginBottom="146dp"
        android:text="소주잔 1잔 기준입니다"
        android:paddingStart="48dp"
        android:paddingEnd="21dp"
        android:textColor="@color/white"
        android:fontFamily="@font/notosans_regular"
        android:paddingVertical="7dp"
        android:background="@drawable/et_area_beverage_naming"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_sojuzan"
        android:layout_marginStart="22dp"
        app:layout_constraintStart_toStartOf="@id/result_beverage_tv"
        app:layout_constraintTop_toTopOf="@id/result_beverage_tv"
        app:layout_constraintBottom_toBottomOf="@id/result_beverage_tv"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/result_beverage_bg"
        android:layout_marginBottom="38dp">
        <TextView
            android:id="@+id/result_beverage_tv_beverage1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:text="맥주 1잔"
            android:fontFamily="@font/notosans_bold"/>

        <TextView
            android:id="@+id/result_beverage_tv_beverage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:text="맥주 1잔"
            android:fontFamily="@font/notosans_bold"/>
        <TextView
            android:id="@+id/result_beverage_tv_beverage3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:text="맥주 1잔"
            android:fontFamily="@font/notosans_bold"/>



    </LinearLayout>












</androidx.constraintlayout.widget.ConstraintLayout>